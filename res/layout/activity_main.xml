<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText" >

    <EditText
        android:id="@+id/insert_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Scrieti textul pt. codat/decodat"
        android:inputType="textMultiLine"
        android:linksClickable="false"
        android:maxLines="4"
        android:selectAllOnFocus="true" />
    
    	<requestFocus />

    <EditText
        android:id="@+id/result_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/insert_Text"
        android:layout_alignRight="@+id/insert_Text"
        android:layout_below="@+id/insert_Text"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="Textul decodat/codat apare aici"
        android:inputType="textMultiLine"
        android:maxLines="4" 
        android:selectAllOnFocus="true" >

    </EditText>

    <Button
        android:id="@+id/buttonCod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insert_Text"
        android:layout_centerHorizontal="true"
        android:text="@string/codeaza_decodeaza_textul" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_Text"
        android:layout_centerHorizontal="true"
        android:text="Istoria ROT13" />

</RelativeLayout>